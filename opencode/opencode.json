{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "ollama": {
      "models": {
        "qwen2.5-coder:7b": {
          "name": "Qwen2.5-Coder"
        },
        "llama2:13b": {
          "name": "Llama2:13b"
        },
        "llama3.1:8b": {
          "name": "Llama3.1:8b"
        },
        "codellama": {
          "name": "CodeLlama(7b)"
        },
        "codellama:7b": {
          "name": "codellama:7b"
        },
        "codellama:latest": {
          "name": "codellama:latest"
        },
        "nomic-embed-text": {
          "name": "Nomic Embedded Text"
        },
        "nomic-embed-text:latest": {
          "name": "nomic-embed-text:latest"
        }
      },
      "name": "Ollama (local)",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      }
    }
  },
  "mcp": {
    "lifecoach-mcp-postgres": {
      "type": "remote",
      "url": "http://localhost:5678/mcp",
      "enabled": true,
      "timeout": 10000
    },
    "lifecoach-mcp-filesystem": {
      "type": "local",
      "command": [
        "rust-mcp-filesystem",
        "--allow-write",
        "~/dev/products/life-coach"
      ],
      "enabled": true,
      "timeout": 5000
    },
    "fitby-mcp-filesystem": {
      "type": "local",
      "command": [
        "rust-mcp-filesystem",
        "--allow-write",
        "~/dev/products/fitby"
      ],
      "enabled": true,
      "timeout": 5000
    },
    "knowledgebase-mcp-filesystem": {
      "type": "local",
      "command": [
        "rust-mcp-filesystem",
        "--allow-write",
        "~/dev/documentation"
      ],
      "enabled": true,
      "timeout": 5000
    },
    "lifecoach-mcp-server": {
      "type": "local",
      "command": [
        "uvx",
        "mcp-server-motherduck",
        "--db-path",
        "/Users/liorgefen/dev/databases/duckdb/lifecoach.duckdb"
      ],
      "enabled": false,
      "timeout": 5000
    },
    "github": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-github"],
      "enabled": true,
      "environment": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "{env:GITHUB_TOKEN}"
      }
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "-y", "@playwright/mcp"],
      "enabled": true
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true,
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    }
  },
  "theme": "catppuccin-macchiato",
  "plugin": ["opencode-gemini-auth@latest"]
}
